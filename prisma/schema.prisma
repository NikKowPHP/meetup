// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(uuid())
  email         String         @unique
  name          String?
  subscriptions Subscription[]
  attendances   EventAttendance[] @relation("userAttendances")
  profile       Profile?
}

model Subscription {
  id          String   @id @default(uuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  priceId     String
  status      String   // active, canceled, expired
  currentPeriodEnd DateTime
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model EventAttendance {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], name: "userAttendances")
  eventId   String
  event     Event    @relation(fields: [eventId], references: [id], name: "eventAttendances")
  status    String   // 'interested' or 'attending'
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, eventId])
}

model Event {
  id          String   @id @default(uuid())
  title       String
  description String
  start       DateTime
  end         DateTime?
  location    Json
  imageUrl    String?
  sourceUrl   String
  categories  String[]
  price       Float?
  source      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  attendances EventAttendance[] @relation("eventAttendances")
}

model ErrorLog {
  id          String   @id @default(uuid())
  error_message String
  stack_trace  String
  context      String?
  environment  String
  createdAt    DateTime @default(now())
}

model SecurityAlert {
  id        String   @id @default(uuid())
  message   String
  channel   String
  severity  String
  sent_at   DateTime @default(now())
}

model Profile {
  id        String   @id @default(uuid())
  username  String   @unique
  full_name String?
  avatar_url String?
  website   String?
  updated_at DateTime @updatedAt
  role      String   @default("user")
  user      User     @relation(fields: [userId], references: [id])
  userId    String   @unique
}
